<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Login</title>
    <% include partials/_style %>
  </head>
  <body>
    <% include partials/_header %>
    <div class="main">
      <% if(message){ %>
      <p><%= message %></p>
      <% } %>
      <form action="/login" method="POST" style="margin:50px;">
        <label for="email">Email:</label>
        <input id="email" type="text" name="email" placeholder="you@..." style="width: 300px">
        <br />
        <label for="password">Password:</label>
        <input id="password" type="text" name="password" placeholder="enter a password..." style="width: 300px">
        <input type="submit" value="Login">
      </form>
    </div>
  </body>
</html>
